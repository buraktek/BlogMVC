@model IEnumerable<BlogMVC.Models.BlogModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-8">
        @foreach(var blog in Model)
        { 
            <div class="blogitem">
                <h3 class="page-header">
                    @blog.Baslik
                </h3>
                <p>    
                    <span class="glyphicon glyphicon-time"> </span>
                    @blog.EklemeTarihi
                </p>     
                <hr/>
                <img class="img-responsive" src="https://via.placeholder.com/150" alt="">
                <hr/>
                <p>
                    @blog.Aciklama
                </p>

                <button class="btn btn-primary">Daha Fazla...</button>
                <br/>
                <br/>
                <hr/>
                <br/>
            </div>  
        }
    </div>
</div>